<div id="board" height="300px" style="max-width:400px;">
  <h2>Forgot your password?</h2><br />
  <% if devise_error_messages!.size != 0 %>
    <div class="alert alert-error fade in">
      <button type="button" class="close" data-dismiss="alert" href="#">Ã—</button>
      <%= devise_error_messages! %>
    </div><br />
  <% end %>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= f.email_field :email, :placeholder => "Email", :style => "height:25px;" %>

    <div><%= f.submit "Send me reset password instructions", :class => "btn" %></div>
  <% end %>
</div>
