<% content_for :javascript do %>
  <script>
    var progress = setInterval(function() {
      var $bar = $('.bar');
      
      if ($bar.width()>=390) {
          clearInterval(progress);
          $('.progress').removeClass('active');
          $('.progress').hide();
          $('#go-fish-image').show('slow');

      } else {
          $bar.width($bar.width()+90);
      }
        $bar.text(Math.round($bar.width()/4) + "%");
    }, 60);
  </script>
<% end %>

