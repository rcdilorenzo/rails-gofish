<html lang="en">
  <head>
    <% if !user_signed_in? %>
      <title>Go Fish</title>
    <% else %>
      <title>Go Fish - <%= "#{current_user.screen_name}".html_safe %></title>
    <% end %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag "application" %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js"></script>
    <%= yield :javascript %>
  </head>

  <body>
    <%= yield :window %>
    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner" style="padding: 0px 0px 0px 0px;">
        <div class="container">
          <div class="nav-collapse">
            <a class="brand" href="/">Go Fish</a>
          </div>
          <div class="nav-collapse" style="height:auto; padding-left:20px">
            <ul class="nav">
              <li><a class="hidden-desktop" style="padding-left: 20px;" href="/">Home</a></li>
            </ul>
            <ul class="nav pull-right">
              <% if user_signed_in? %>
                <li class="divider-vertical"></li>
                <li><%= link_to "<span class=\"icon-user icon-white\"><\/span> &nbsp;#{current_user.screen_name}".html_safe, user_path(current_user) %></li>
                <li class="divider-vertical"></li>
                <li><%= link_to "Sign out", destroy_user_session_path %></li>
              <% else %>
                <li <%= "class=active" if request.url[-7..-1] == "sign_in" %>><a href="/users/sign_in">Sign In</a></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div style="padding-bottom:100px;" class="container">
      <% if notice %>
          <p class="alert alert-info"><%= notice %></p>
      <% elsif alert %>
        <% if alert =~ /invalid/i %>
          <p class="alert alert-error"><%= alert %></p>
        <% else %>
          <p class="alert alert-success"><%= alert %></p>
        <% end %>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>


